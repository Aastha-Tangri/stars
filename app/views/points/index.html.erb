<% if @points.present? %>
  <table>
    <tr>
      <th>Given To</th>
      <th>Project</th>
      <th>Category</th>
      <th>Stars</th>
      <th>Task</th>
      <th>Comment</th>
      <th>Manager</th>
    </tr>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.given_to %></td>
        <td><%= point.project %></td>
        <% category = Category.find(point.category_id) %>
        <% category_name = category.name %>
        <td><%= category_name %></td>
        <td><%= category.stars %></td>
        <td><%= point.task %></td>
        <td><%= point.comment %></td>
        <td><%= point.manager %></td>
        <td></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <label>Nothing to display</label>
<% end %>
<%= link_to "Give Points", new_employee_point_path %>