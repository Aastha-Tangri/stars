<%= form_for(:points, html: {class: "form-horizontal form-points"}) do |f| %>
    <div class="form-group">
      <%= f.label :given_to, class: "control-label col-md-4" %>
        <div class="col-md-4">
      <%#= f.collection_select(:given_to, Employee.all, include_blank: "Select...") %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :category, class: "control-label col-md-4" %>
          <div class="col-md-4">
        <%#= f.collection_select(:category, Category.all, :id, :name, include_blank: "Select..." %>
          </div>
        </div>



        <div class="form-group">
          <%= f.label :project, class: "control-label col-md-4" %>
            <div class="col-md-4">
              <%= f.text_field :project, class: "text-field form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :task, class: "control-label col-md-4" %>
                <div class="col-md-4">
                  <%= f.text_field :task, class: "text-field form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :comment, class: "control-label col-md-4" %>
                    <div class="col-md-4">
                      <%= f.text_area :comment, class: "text-area form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= f.label :manager, class: "control-label col-md-4" %>
                        <div class="col-md-4">
                          <%= f.text_field :manager, class: "text-field form-control" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="col-md-offset-4 col-md-8">
                            <%= f.submit "Appreciate", class: "btn btn-primary" %>
                            </div>
                          </div>

                        <% end %>
